<Window x:Class="projectmanagement.EmployeeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectmanagement"
        mc:Ignorable="d"
        Title="Select Employee" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGrid" Style="{DynamicResource DataGridStyle1}" 
                  CellStyle="{DynamicResource DataGridStyle1}" ItemsSource="{Binding}" 
                  ColumnWidth="*" HorizontalAlignment="Stretch">
            <!-- Define columns for employee data -->
            <DataGrid.Columns>
                <DataGridCheckBoxColumn CanUserResize="False" Width="Auto" Header="Select" />
                <!-- Add columns for employee data like Name, Department, etc. -->
            </DataGrid.Columns>
        </DataGrid>

        <!-- Confirmation button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Select" Click="SelectButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
