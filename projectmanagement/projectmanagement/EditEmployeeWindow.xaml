<Window x:Class="projectmanagement.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectmanagement"
        mc:Ignorable="d"
        Title="EditEmployeeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Edit Employee" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Vorname:"/>
            <TextBox x:Name="txtVorname" Margin="0,0,0,10"/>

            <TextBlock Text="Nachname:"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <TextBlock Text="Abteilung:"/>
            <TextBox x:Name="txtAbteilung" Margin="0,0,0,10"/>

            <TextBlock Text="Telefon:"/>
            <TextBox x:Name="txtTelefon" Margin="0,0,0,10"/>

            <Button Content="Save" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
